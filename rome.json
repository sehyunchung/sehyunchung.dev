{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true
	},
	"files": {
		"ignore": ["node_modules", "**/content/**/*"]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}
