{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"],
			"env": [
				"GITHUB_ACCESS_TOKEN",
				"VERCEL_ENV",
				"VERCEL_URL",
				"GITHUB_ID",
				"GITHUB_SECRET",
				"OPENAI_API_KEY"
			]
		},
		"lint": {},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
